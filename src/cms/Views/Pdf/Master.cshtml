        </tr>
    </table>

    <table class="inventory">
        <thead>
            <tr>
                <th>Artikel</th>
                <th>Prijs per stuk</th>
                <th>BTW</th>
                <th>Aantal</th>
                <th>Prijs incl. BTW</th>
            </tr>
        </thead>
    </table>
</body>
</html>