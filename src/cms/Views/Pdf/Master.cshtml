            </td>
        </tr>
        <tr style="height: 20px;"><td colspan="3"></td></tr>
        <tr>
            <td style="padding: 20px 0 0px 26mm; width: 112mm; line-height: 26px;" colspan="1" align="left" valign="top" class="billingAddress">
                <b>Factuuradres:</b><br /><br />
                @{
                    if (!string.IsNullOrWhiteSpace(@Model.BillingCompany))
                    {
                        @Model.BillingCompany<br />
                    }
                }
                T.a.v. @Model.BillingName<br />
                @Model.BillingAddressLine1<br />
                @if (!string.IsNullOrWhiteSpace(@Model.BillingAddressLine2))
                {
                    @Model.BillingAddressLine2<br />
                }
                @Model.BillingZipCode @Model.BillingCity @if (!string.IsNullOrWhiteSpace(@Model.BillingState))
                {
                    @:, @Model.BillingState
                }<br />
                <!-- @Model.BillingCountry<br /><br />
        @{
            if (!string.IsNullOrWhiteSpace(@Model.BillingPhoneNumber))
            {
                <b>Tel: </b>@Model.BillingPhoneNumber<br />
            }

            if (!string.IsNullOrWhiteSpace(@Model.BillingEmail))
            {
                <b>E-mail: </b>@Model.BillingEmail<br />
            }

            if (!string.IsNullOrWhiteSpace(@Model.BillingVatNumber))
            {
                <b>BTW nr: </b>@Model.BillingVatNumber<br />
            }
        }-->
            </td>
            <td style="padding: 72px 26mm 0px 0px;" colspan="1" align="left" valign="top" class="details">
                <table style="width: 100%;">
                    <tr>
                        <th>Datum:</th>
                        <td>@Model.Date</td>
                    </tr>
                    @if (Model.Status == "completed")
                    {
                        <tr>
                            <th>Bestelnummer:</th>
                            <td valign="bottom">@Model.OrderNumber</td>
                        </tr>
                    }
                    <tr>
                        <th>Factuurnummer:</th>
                        <td valign="bottom">@Model.InvoiceNumber</td>
                    </tr>
                    @if (Model.Status == "credit")
                    {
                        <tr>
                            <th>Creditering van factuurnummer:</th>
                            <td valign="bottom">@Model.RefInvoiceNumber</td>
                        </tr>
                    }
                    @if (Model.Status == "completed")
                    {
                        <tr>
                            <th>Status:</th>
                            <td valign="bottom">Betaald</td>
                        </tr>
                    }
                </table>
            </td>
