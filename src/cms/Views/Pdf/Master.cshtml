@model Site.Models.ViewModels.PdfViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

</head>
<body style="width: 100%;">
    <style>
        body {
            font: 16px/1 'Open Sans', sans-serif;
            margin: 0;
            padding: 0;
            border: 0;
        }

        td.billingAddress,
        td.deliveryAddress,
        td.details {
            width: 33.3333%;
            font-size: 16px;
            line-height: 26px;
        }

            td.details table {
                border-collapse: collapse;
                border-style: hidden;
            }

                td.details table th,
                td.details table td {
                    position: relative;
                    padding: 0;
                    text-align: left;
                    border: 9px solid #ffffff;
                    border-top: 3px solid #ffffff !important;
                    border-bottom: 3px solid #ffffff !important;
                }

                td.details table td {
                    width: auto;

                    padding-right: 0 !important;
                    border-right: 0 !important;
                }

            td.billingAddress b,
            td.deliveryAddress b,
            td.details b {
                font-weight: 600;
            }

        table.inventory {
            clear: both;
            font-size: 16px;
            line-height: 24px;
            width: 210.8mm;
            margin: 0 26mm;
            padding: 0;
            border-collapse: collapse;
            border-style: hidden;
        }

            table.inventory thead {
                width: 100%;
            }

            table.inventory th {
                font-weight: bold;
                text-align: left;
                border: 13px solid #ffffff;
                border-top: 7px solid #ffffff !important;
                border-bottom: 7px solid #ffffff !important;
            }

                table.inventory th:nth-child(1) {
                    width: 35%;
                }

                table.inventory th:nth-child(2) {
                    text-align: right;
                    width: 15%;
                }

                table.inventory th:nth-child(3) {
                    text-align: right;
                    width: 15%;
                }

                table.inventory th:nth-child(4) {
                    text-align: right;
                    width: 16%;
                }

                table.inventory th:nth-child(5) {
                    text-align: right;
                    width: 19%;
                }
    </style>

    <style>
        @@media print {
            background: #ffffff !important;
        }
    </style>

